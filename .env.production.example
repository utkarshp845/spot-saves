# SpotSave Production Environment Variables
# Copy this file to .env.production and fill in actual values

# Application Environment
ENVIRONMENT=production

# Database
DATABASE_URL=sqlite:///./data/spotsave.db

# AWS Configuration
AWS_REGION=us-east-1
# AWS credentials should be provided via IAM role in Lightsail
# If needed, uncomment below:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# NextAuth Configuration
# Generate secret with: openssl rand -base64 32
NEXTAUTH_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
NEXTAUTH_URL=https://spotsave.pandeylabs.com
NEXT_PUBLIC_API_URL=https://spotsave.pandeylabs.com/api

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Frontend Configuration
NODE_ENV=production

# Cron Schedule (optional, if using cron container)
SCAN_SCHEDULE=0 2 * * *
BACKEND_URL=http://backend:8000

# Lightsail/Container Configuration
# These are set automatically by Lightsail, but can be overridden:
# CONTAINER_SERVICE_NAME=spotsave
# STATIC_IP_NAME=spotsave-ip
